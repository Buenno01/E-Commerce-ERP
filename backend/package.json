{
  "name": "e-commerce-erp",
  "version": "1.0.0",
  "description": "An erp for managing e-commerce resources, manage your products and market places in one software",
  "keywords": [
    "erp",
    "e-commerce",
    "typescript",
    "graphql",
    "express"
  ],
  "license": "MIT",
  "author": "Buenno01",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:logs": "docker compose logs -f postgres",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "prisma db seed",
    "setup": "npm install && npm run db:up && npm run prisma:migrate",
    "setup:fresh": "npm install && npm run db:reset && npm run prisma:migrate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "dotenv": "^17.3.1",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "prisma": "^6.19.2",
    "ruru": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^22.19.11",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "swc": true,
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "bundler"
    }
  }
}
