generator client {
  provider = "prisma-client"
  output = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id               String   @id @default(uuid())
  name             String
  slug             String   @unique
  description      String?
  priceAmount      Int
  priceCurrencyCode String
  sku              String   @unique
  quantity         Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}